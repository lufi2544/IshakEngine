ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  IshakEngineTests_config = debug
  Core_config = debug
  Ecs_config = debug
  IMGUI_config = debug
endif

PROJECTS := IshakEngineTests Core Ecs IMGUI

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

IshakEngineTests: Core Ecs IMGUI
ifneq (,$(IshakEngineTests_config))
	@echo "==== Building IshakEngineTests ($(IshakEngineTests_config)) ===="
	@${MAKE} --no-print-directory -C . -f IshakEngineTests.make config=$(IshakEngineTests_config)
endif

Core:
ifneq (,$(Core_config))
	@echo "==== Building Core ($(Core_config)) ===="
	@${MAKE} --no-print-directory -C ../Source/Modules/Core -f Makefile config=$(Core_config)
endif

Ecs: Core
ifneq (,$(Ecs_config))
	@echo "==== Building Ecs ($(Ecs_config)) ===="
	@${MAKE} --no-print-directory -C ../Source/Modules/Ecs -f Makefile config=$(Ecs_config)
endif

IMGUI:
ifneq (,$(IMGUI_config))
	@echo "==== Building IMGUI ($(IMGUI_config)) ===="
	@${MAKE} --no-print-directory -C ../Source/Modules/IMGUI -f Makefile config=$(IMGUI_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f IshakEngineTests.make clean
	@${MAKE} --no-print-directory -C ../Source/Modules/Core -f Makefile clean
	@${MAKE} --no-print-directory -C ../Source/Modules/Ecs -f Makefile clean
	@${MAKE} --no-print-directory -C ../Source/Modules/IMGUI -f Makefile clean

